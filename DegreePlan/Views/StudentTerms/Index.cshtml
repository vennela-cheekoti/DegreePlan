@model IEnumerable<DegreePlan.Models.StudentTerm>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<form asp-action="Index" method="get">
    <div class="form-actions no-color">
        <p>
            Find by Term abv: <input type="text" name="SearchString" value="@ViewData["currentFilter"]" />
            <input type="submit" value="Search" class="btn btn-default" /> |
            <a asp-action="Index">Back to Full List</a>
        </p>
    </div>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["TermSortParm"]">@Html.DisplayNameFor(model => model.Term)</a>
            </th>

            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["TermsSortParm"]">@Html.DisplayNameFor(model => model.TermAbv)</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["DegreeSortParm"]">@Html.DisplayNameFor(model => model.DegreeplanId)</a>
            </th>
            
            <th>
                @Html.DisplayNameFor(model => model.DegreePlan)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Term)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TermAbv)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TermName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DegreeplanId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.StudentTermId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.StudentTermId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.StudentTermId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
