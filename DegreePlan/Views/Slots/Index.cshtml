@model IEnumerable<DegreePlan.Models.Slot>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<form asp-action="Index" method="get">
    <div class="form-actions no-color">
        <p>
            Find by credit Id: <input type="text" name="SearchString" value="@ViewData["currentFilter"]" />
            <input type="submit" value="Search" class="btn btn-default" /> |
            <a asp-action="Index">Back to Full List</a>
        </p>
    </div>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["StatusSortParm"]">@Html.DisplayNameFor(model => model.Status)</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["TermsSortParm"]">@Html.DisplayNameFor(model => model.Term)</a>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DegreePlan)
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["CreditSortParm"]">@Html.DisplayNameFor(model => model.CreditId)</a>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Term)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DegreePlanId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreditId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.SlotId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.SlotId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.SlotId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
