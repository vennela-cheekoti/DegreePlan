@model IEnumerable<DegreePlan.Models.DegreeCredit>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<form asp-action="Index" method="get">
    <div class="form-actions no-color">
        <p>
            Find by Degree Id or Credit Id: <input type="text" name="SearchString" value="@ViewData["currentFilter"]" />
            <input type="submit" value="Search" class="btn btn-default" /> |
            <a asp-action="Index">Back to Full List</a>
        </p>
    </div>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["DegreeIdParm"]">@Html.DisplayNameFor(model => model.DegreeId)</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["RequirementIdParm"]">@Html.DisplayNameFor(model => model.CreditId)</a>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.DegreeId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreditId)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.DegreeCreditId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.DegreeCreditId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.DegreeCreditId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
